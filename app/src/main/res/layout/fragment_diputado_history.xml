<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            style="@style/Diputado.HistoryRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Diputado.HistoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diputado_status"/>
            <TextView
                android:id="@+id/diputado_status"
                style="@style/Diputado.HistoryData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="0.5dp"
            android:background="#777" />
        <LinearLayout
            style="@style/Diputado.HistoryRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Diputado.HistoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diputado_age"/>
            <TextView
                android:id="@+id/diputado_age"
                style="@style/Diputado.HistoryData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="0.5dp"
            android:background="#777" />
        <LinearLayout
            style="@style/Diputado.HistoryRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Diputado.HistoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diputado_professional_years"/>
            <TextView
                android:id="@+id/diputado_professional_years"
                style="@style/Diputado.HistoryData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="0.5dp"
            android:background="#777" />
        <LinearLayout
            style="@style/Diputado.HistoryRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/Diputado.HistoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diputado_college_number"/>
            <TextView
                android:id="@+id/diputado_college_number"
                style="@style/Diputado.HistoryData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>